{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/next",
        "config": {
          "outputDirectory": "frontend/out"
        }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node",
        "config": {
          "outputDirectory": "backend/out"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/frontend/out/index.html",
        "methods": ["GET"]
      },
      {
        "src": "/api/(.*)",
        "dest": "/backend/out/index.js",
        "methods": ["GET", "POST", "PUT", "DELETE"]
      }
    ],
    "env": {
